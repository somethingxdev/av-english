---
import { Image } from 'astro:assets';
const benefitsItems = [
  'планирует релоцироваться;',
  'хочет развивать свои когнитивные навыки;',
  'не хочет забывать язык и нуждается в практике;',
  'хочет получить работу в международной компании или выйти на международный рынок;',
  'сдает международный экзамен: FCE, CAE и IELTS;',
  'сдает ЕГЭ;',
];
---

<section class="container py-10 md:py-20">
  <div class="flex flex-col lg:flex-row gap-10">
    <div class="shrink-0 flex flex-col h-full justify-between">
      <h2 class="section-title mb-5 md:mb-10">ЭТО ПОДХОДИТ ТЕМ, КТО...</h2>
      <Image src={import('../assets/benefits.png')} alt="ПОДХОДИТ" class="lg:mb-7" />
    </div>
    <ul class="flex flex-col justify-between gap-5">
      {
        benefitsItems.map((item, index) => (
          <li class="relative p-4  mb-2 lg:mb-0 lg:text-lg font-medium">
            {item}
            <span class="absolute left-0 top-1/2 -translate-y-1/2 font-heading font-semibold text-[#EBF4F6] text-8xl -z-10">{index + 1}</span>
          </li>
        ))
      }
    </ul>
  </div>
</section>
